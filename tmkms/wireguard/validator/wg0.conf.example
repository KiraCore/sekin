# WireGuard config for VALIDATOR machine
# Copy to wg0.conf and update with your keys/IPs

[Interface]
# Validator's WireGuard private key (generate with: wg genkey)
PrivateKey = <VALIDATOR_PRIVATE_KEY>
# WireGuard tunnel IP for validator
Address = 10.200.0.1/24
ListenPort = 51820

[Peer]
# Signer's WireGuard public key (from: echo <SIGNER_PRIVATE_KEY> | wg pubkey)
PublicKey = <SIGNER_PUBLIC_KEY>
# Signer's WireGuard tunnel IP
AllowedIPs = 10.200.0.2/32
# Signer machine's public IP (or domain)
Endpoint = <SIGNER_PUBLIC_IP>:51820
PersistentKeepalive = 25
